<?xml version="1.0" encoding="utf-8"?>
<com.wecyberstage.wecyberstage.view.browse.StagePlayPoster xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/stagePlay_poster"
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        app:srcCompat="@mipmap/ic_launcher"
        android:contentDescription="@string/play_profile_poster" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/stagePlay_title"
            android:text="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true" />
        <TextView
            android:id="@+id/stagePlay_brief"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/stagePlay_title"
            android:text="@string/app_name" />
    </RelativeLayout>
</com.wecyberstage.wecyberstage.view.browse.StagePlayPoster>
