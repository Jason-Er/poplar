<?xml version="1.0" encoding="utf-8"?>
<com.wecyberstage.wecyberstage.view.main.PlayerControlBar xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_gravity="bottom"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark"
    android:id="@+id/player_control_bar"
    android:elevation="4dp" >
    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:id="@+id/footerMain_seekBar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal">
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/footerMain_playerControl_stop"
            android:contentDescription="@string/bottom_bar_pre"
            android:background="@drawable/onclick_press_color"
            android:src="@drawable/ic_stop"/>
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/footerMain_playerControl_pre"
            android:contentDescription="@string/bottom_bar_pre"
            android:background="@drawable/onclick_press_color"
            android:src="@drawable/ic_skip_previous"/>
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/footerMain_playerControl_play"
            android:contentDescription="@string/bottom_bar_play"
            android:background="@drawable/onclick_press_color"
            android:src="@drawable/ic_play"/>
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/footerMain_playerControl_next"
            android:contentDescription="@string/bottom_bar_next"
            android:background="@drawable/onclick_press_color"
            android:src="@drawable/ic_skip_next"/>
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/footerMain_playerControl_volume"
            android:contentDescription="@string/bottom_bar_next"
            android:background="@drawable/onclick_press_color"
            android:src="@drawable/ic_volume"/>
    </LinearLayout>

</com.wecyberstage.wecyberstage.view.main.PlayerControlBar>
