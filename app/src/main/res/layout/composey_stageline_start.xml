<?xml version="1.0" encoding="utf-8"?>

<com.wecyberstage.wecyberstage.view.common.StageLineCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="50dp"
    >

    <FrameLayout
        android:id="@+id/composeLine_dragHandle"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_marginEnd="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left|top"
            android:scaleType="fitXY"
            android:src="@drawable/drag_vertical"/>
        <ImageView
            android:id="@+id/stageLine_mask"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@android:drawable/sym_def_app_icon" />
    </FrameLayout>

    <TextView
        android:id="@+id/stageLine_dialogue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="@string/hello"
        android:layout_toEndOf="@+id/composeLine_dragHandle"
        android:background="@android:color/holo_orange_light" />

</com.wecyberstage.wecyberstage.view.common.StageLineCardView>
